            padding-right: 40px;
            border-radius: 6px;
            border: 1px solid #ddd;
        }
           
        
        /* Animation */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        .fade-in {
            animation: fadeIn 0.4s ease-out forwards;
        }

        /* Modal styles */
