   <style>
        :root {
            --primary-color: #2a7f8f;
            --primary-light: #e0f7fa;
            --secondary-color: #3aa5ba;
            --success-color: #4caf50;
            --success-light: #e8f5e9;
            --danger-color: #f44336;
            --danger-light: #ffebee;
            --warning-color: #ff9800;
            --warning-light: #fff8e1;
            --info-color: #00bcd4;
            --light-color: #f5f5f5;
            --dark-color: #1e3a4a;
            --dental-blue: #e0f7fa;
            --dental-teal: #b2ebf2;
        }
        
        body {
            font-family: Vazir, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .main-content {
            margin-right: 280px;
            transition: all 0.3s;
            padding: 20px;
        }
        
        .main-content-expanded {
            margin-right: 70px;
        }
        
        /* Improved Stat Cards */
        .stat-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            margin-bottom: 20px;
            overflow: hidden;
            position: relative;
            border-right: 4px solid;
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .stat-card.primary {
            border-right-color: var(--primary-color);
            background-color: white;
        }
        
        .stat-card.success {
            border-right-color: var(--success-color);
            background-color: white;
        }
        
        .stat-card.warning {
            border-right-color: var(--warning-color);
            background-color: white;
        }
        
        .stat-card.danger {
            border-right-color: var(--danger-color);
            background-color: white;
        }
        
        .stat-card .card-body {
            padding: 20px;
            position: relative;
            z-index: 1;
        }
        
        .stat-card h3 {
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 10px;
            font-size: 1.5rem;
        }
        
        .stat-card h6 {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }
        
        .stat-card .icon-wrapper {
            position: absolute;
            top: 20px;
            left: 20px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        
        .stat-card.primary .icon-wrapper {
            background-color: rgba(42, 127, 143, 0.1);
            color: var(--primary-color);
        }
        
        .stat-card.success .icon-wrapper {
            background-color: rgba(76, 175, 80, 0.1);
            color: var(--success-color);
        }
        
        .stat-card.warning .icon-wrapper {
            background-color: rgba(255, 152, 0, 0.1);
            color: var(--warning-color);
        }
        
        .stat-card.danger .icon-wrapper {
            background-color: rgba(244, 67, 54, 0.1);
            color: var(--danger-color);
        }
        
        .stat-card .trend {
            display: flex;
            align-items: center;
            font-size: 0.85rem;
            margin-top: 10px;
        }
        
        .stat-card .trend.up {
            color: var(--success-color);
        }
        
        .stat-card .trend.down {
            color: var(--danger-color);
        }
        
        .stat-card .trend i {
            margin-left: 5px;
        }
        
        /* Responsive Improvements */
        @media (max-width: 992px) {
     
            
            .main-content {
                margin-right: 70px;
                padding: 15px;
            }
            
            .stat-card h3 {
                font-size: 1.3rem;
            }
            
            .stat-card .icon-wrapper {
                width: 40px;
                height: 40px;
                font-size: 1.2rem;
            }
        }
        
        @media (max-width: 768px) {
