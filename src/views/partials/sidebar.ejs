<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
<style>
       .sidebar {
            background-color: var(--dark-color);
            color: white;
            height: 100vh;
            position: fixed;
            transition: all 0.3s;
            z-index: 1000;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }
        
        .sidebar-collapsed {
            width: 70px;
            overflow: hidden;
        }
        
        .sidebar-expanded {
            width: 280px;
        }

               
        .user-profile {
            display: flex;
            align-items: center;
            padding: 15px;
            border-radius: 8px;
            transition: all 0.3s;
            margin: 10px 0;
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .user-profile:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .user-profile img {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            margin-left: 12px;
            object-fit: cover;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }
        
        .user-profile div h6 {
            margin-bottom: 3px;
            font-weight: 600;
        }
        
        .user-profile div small {
            font-size: 0.8rem;
            opacity: 0.8;
        }
        
         /* Tab styles */
        .nav-tabs {
            border-bottom: 1px solid #dee2e6;
        }
        
        .nav-tabs .nav-link {
            color: var(--secondary-color);
            border: none;
            padding: 10px 20px;
            font-weight: 500;
            background-color: transparent;
        }
        
        .nav-tabs .nav-link.active {
            color: var(--primary-color);
            border-bottom: 3px solid var(--primary-color);
            background-color: transparent;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            border-radius: 5px;
            margin: 3px 0;
            padding: 12px 15px;
            transition: all 0.3s;
            font-size: 0.95rem;
        }
        
        .nav-link:hover, .nav-link.active {
            background-color: rgba(255, 255, 255, 0.15);
            color: white;
        }
        
        .nav-link i {
            margin-left: 10px;
            font-size: 1.1rem;
            min-width: 20px;
            text-align: center;
        }
        
        @media (max-width: 768px) {
            
            .sidebar {
                width: 280px;
                right: -280px;
            }
            
            .sidebar.show {
                right: 0;
            }
        
        }

        /* Dental theme elements */
        .dental-bg {
            background-color: var(--dental-blue);
        }
        
        .tooth-icon {
            color: var(--primary-color);
            margin-left: 5px;
        }
        
        .dental-nav {
            background-color: white;
            padding: 15px 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .logo {
            font-weight: 700;
            font-size: 1.3rem;
            color: white;
            display: flex;
            align-items: center;
            padding: 15px;
        }
        
        .logo i {
            margin-left: 10px;
            color: var(--dental-teal);
        }

                /* Responsive adjustments */
        @media (max-width: 992px) {
            .sidebar {
                width: 80px;
                overflow: hidden;
            }
         
             .sidebar .nav-link span {
                display: none;
            }
            
            .sidebar .nav-link {
                text-align: center;
                padding: 12px 5px;
            }
            
            .sidebar .nav-link i {
                margin-left: 0;
                font-size: 1.2rem;
            }
            
            .user-profile div {
                display: none;
            }
            
            .user-profile img {
                margin-left: 0;
            }
           
             .logo span {
                display: none;
            }
            
            .logo i {
                margin-left: 0;
                font-size: 1.8rem;
            }
        }
     
</style>    
</head>
<body>

       <!-- Sidebar -->
        <div class="sidebar sidebar-expanded d-flex flex-column" id="sidebar">
            <div class="logo">
                <i class="fas fa-tooth"></i>
                <span>دنتالینو</span>
            </div>
            
            <div class="user-profile">
                <img src="https://ui-avatars.com/api/?name=دکتر+محمدی&background=2a7f8f&color=fff" alt="پروفایل">
                <div>
                    <h6>دکتر امیر محمدی</h6>
                    <small>متخصص دندانپزشکی</small>
                </div>
            </div>
            
            <hr class="bg-secondary mx-3 my-1">
            
            <ul class="nav flex-column flex-grow-1 p-3">
                <li class="nav-item">
                    <a class="nav-link active" href="/" data-bs-toggle="tab">
                        <i class="fas fa-home"></i>
                        <span>داشبورد</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/appointment" data-bs-toggle="tab">
                        <i class="fas fa-calendar-check"></i>
                        <span>نوبت‌دهی</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patient" data-bs-toggle="tab">
                        <i class="fas fa-user-injured"></i>
                        <span>بیماران</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/pay" data-bs-toggle="tab">
                        <i class="fas fa-wallet"></i>
                        <span>مالی و حسابداری</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#services" data-bs-toggle="tab">
                        <i class="fas fa-teeth"></i>
                        <span>خدمات درمانی</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#reports" data-bs-toggle="tab">
                        <i class="fas fa-chart-bar"></i>
                        <span>گزارشات</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#settings" data-bs-toggle="tab">
                        <i class="fas fa-cog"></i>
                        <span>تنظیمات</span>
                    </a>
                </li>
            </ul>
            
        </div>
</body>
<script>

const currentPath = window.location.pathname;
const navLinks = document.querySelectorAll('.sidebar .nav-link');

navLinks.forEach(link => {

    if (link.getAttribute('href') === currentPath) {
        link.classList.add('active');
        link.removeAttribute('data-bs-toggle');
    } else {
        link.classList.remove('active');
    }
    
    link.addEventListener('click', function(e) {
        if (this.getAttribute('data-bs-toggle') === 'tab') {
            e.preventDefault();
            window.location.href = this.getAttribute('href');
        }
    });

});
</script>

</html>